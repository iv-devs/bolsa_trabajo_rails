 <% if jobs.where(category_job: cat_job).many? %>
    <div class="row">
        <div class="col-md-6">
            <h2> <%= cat_job.to_s.humanize %>  </h2>
        </div>
        <div class="col-md-6">
            <h3 class="text-right"> <small> <%= link_to "Ver todos los trabajos de #{ cat_job.to_s.humanize }", "#" %> </small></h3>
        </div>
    </div>
     
     <% jobs.select{|c| c.category_job == cat_job }.each do |job| %>

        <div class="job-tab">
        <div class="row">
            <div class="col-md-2 col-sm-2 col-xs-12">
                <div class="post-media">
                <%= link_to (image_tag("job_02.jpg", alt: "logo", title: "Home", class: "img-responsive img-thumbnail")), root_path %>
                </div><!-- end media -->
            </div><!-- end col -->

            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="badge part-badge"><%= job.job_type.to_s.humanize %></div>
                <h3>
                    <%= link_to job.title, job_url(job) %>
                </h3>
                <small>
                    <span>Publicado por : <a href="#"> <%= link_to job.company.name, company_url(job.company) %> </a></span> 
                    <span>Publicado Hace : <a href="#"> <%= distance_of_time_in_words( Time.now, job.updated_at) %> </a> </span>
                </small>
            </div><!-- end col -->

            <div class="col-md-2 col-sm-2 col-xs-12">
                <div class="job-meta">
                    <p><%= job.location_job %></p>
                    <small><%= job.category_job %></small>
                </div><!-- end meta -->
            </div><!-- end col -->

            <div class="col-md-2 col-sm-2 col-xs-12">
                <div class="job-meta text-center">
                    <h4>$650/mo</h4>
                    <%= link_to "Ver Trabajo", job_url(job), class: "btn btn-primary btn-sm btn-block" %>
                </div>
            </div><!-- end col -->
        </div><!-- end row -->
        </div><!-- end job-tab -->

    <% end %>
<% end %>