<%= simple_form_for(@job),  html: { class: "submit-form"} do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :job_type, collection: Job.job_types.keys.to_a %>
    <%= f.input :category_job, collection: Job.category_jobs.keys.to_a %>
    <%= f.input :salary_type, collection: Job.salary_types.keys.to_a %>
    <%= f.input :location_job %>
    <%= f.input :salary %>
    <%= f.input :description %>
    <%= recaptcha_tags %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

